{
  "name": "shellui-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "ShellUI monorepo - CLI, Core, and SDK packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node packages/cli/bin/shellui.js build",
    "build:packages": "npm run build --workspaces",
    "build:cli": "npm run build --workspace=@shellui/cli",
    "build:core": "npm run build --workspace=@shellui/core",
    "build:sdk": "npm run build --workspace=@shellui/sdk",
    "serve": "node packages/cli/bin/shellui.js start",
    "start": "node packages/cli/bin/shellui.js start",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "publish:cli": "npm publish --workspace=@shellui/cli",
    "publish:core": "npm publish --workspace=@shellui/core",
    "publish:sdk": "npm publish --workspace=@shellui/sdk",
    "publish:all": "npm run publish:cli && npm run publish:core && npm run publish:sdk",
    "docs:install": "cd tools/docusaurus && npm install",
    "docs:start": "cd tools/docusaurus && npm start",
    "docs:build": "cd tools/docusaurus && npm run build",
    "docs:serve": "cd tools/docusaurus && npm run serve"
  },
  "keywords": [
    "monorepo",
    "shellui",
    "microfrontend"
  ],
  "author": "ShellUI",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
